        <RadioButton x:Name="rbnMan" Content="man" HorizontalAlignment="Left" Margin="204,245,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbnVrouw" Content="vrouw" HorizontalAlignment="Left" Margin="276,245,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbProgrammeren" Content="programmeren" HorizontalAlignment="Left" Margin="204,276,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbNetwerken" Content="netwerken" HorizontalAlignment="Left" Margin="204,296,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbBusiness" Content="business" HorizontalAlignment="Left" Margin="204,316,0,0" VerticalAlignment="Top"/>
        <Button Content="REGISTREREN" HorizontalAlignment="Left" Margin="651,368,0,0" VerticalAlignment="Top" Width="101" Height="25" Click="Button_Click"/>
        <Button x:Name="btnWissen" Content="WISSEN" HorizontalAlignment="Left" Margin="535,368,0,0" VerticalAlignment="Top" Width="101" Height="25" Click="Button_Click_1"/>
