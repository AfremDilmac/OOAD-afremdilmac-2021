        <Label x:Name="foutEmail" Content="" HorizontalAlignment="Left" Margin="535,118,0,0" VerticalAlignment="Top" Width="184" Foreground="Red"/>
        <Label x:Name="foutGeboorte" Content="" HorizontalAlignment="Left" Margin="535,149,0,0" VerticalAlignment="Top" Width="184" Foreground="Red"/>
        <Label x:Name="foutProfiel" Content="" HorizontalAlignment="Left" Margin="535,183,0,0" VerticalAlignment="Top" Width="184" Foreground="Red"/>
        <Label x:Name="foutPasswoord" Content="" HorizontalAlignment="Left" Margin="535,214,0,0" VerticalAlignment="Top" Width="184" Foreground="Red"/>
        <Label x:Name="foutGeslacht" Content="" HorizontalAlignment="Left" Margin="535,245,0,0" VerticalAlignment="Top" Width="184" Foreground="Red"/>
        <Label x:Name="foutInteresses" Content="" HorizontalAlignment="Left" Margin="535,296,0,0" VerticalAlignment="Top" Width="184" Foreground="Red"/>
        <Label x:Name="lblAantalFouten" Content="" HorizontalAlignment="Left" Margin="320,367,0,0" VerticalAlignment="Top" Width="190" Foreground="Red" FontStyle="Italic"/>

