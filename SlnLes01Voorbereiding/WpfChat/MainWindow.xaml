<Window x:Class="WpfChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChat"
        mc:Ignorable="d"
        Title="02.wpf.chat" Height="450" Width="800">
    <Grid Background="#FFA8C9D3">
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Label Content="Naam:" HorizontalAlignment="Left" Margin="74,50,0,0" VerticalAlignment="Top"/>
        <Label Content="Bericht:" HorizontalAlignment="Left" Margin="74,94,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="boxNaam" HorizontalAlignment="Left" Height="30" Margin="144,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292"/>
        <TextBox x:Name="boxBericht" HorizontalAlignment="Left" Height="157" Margin="144,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292"/>
        <Button x:Name="btnVerzenden" Content="VERZENDEN" HorizontalAlignment="Left" Margin="356,298,0,0" VerticalAlignment="Top" Width="80" Height="25" Click="btnVerzenden_Click"/>
        <TextBlock x:Name="blockChat" HorizontalAlignment="Left" Height="341" Margin="495,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="271" Background="White" Padding="5,10,5,10"/>

    </Grid>
</Window>
